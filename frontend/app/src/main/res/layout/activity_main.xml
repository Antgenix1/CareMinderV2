<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/patient_button"
            android:onClick="OnPatientButtonClick"
            android:layout_width="294dp"
            android:layout_height="102dp"
            android:textSize="24dp"
            android:text="Go to Patient"
            />

        <Button
            android:id="@+id/record_button"
            android:onClick="OnRecordButtonClick"
            android:layout_width="294dp"
            android:layout_height="102dp"
            android:textSize="24dp"
            android:text="Go to Record"
            />

        <Button
            android:id="@+id/nurse_button"
            android:onClick="OnNurseButtonClick"
            android:layout_width="294dp"
            android:layout_height="102dp"
            android:textSize="24dp"
            android:text="Go to Nurse"
            />

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>