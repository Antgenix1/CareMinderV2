<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.PatientActivity"
    style="@style/app">


<FrameLayout
    android:id="@+id/popupContainer"
    android:layout_width="0dp"
    android:layout_height="match_parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintWidth_percent="0.5"
    android:visibility="gone"
    android:background="#80000000">
</FrameLayout>

<LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:adjustViewBounds="true"
            android:src="@mipmap/careminder_launcher_foreground"/>

        <TextView
            android:id="@+id/text_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="현재 누적된 요청사항 42" />

        <TextView
            android:id="@+id/text_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="대기1       진행중1        완료2" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/patient_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:paddingHorizontal="32dp"
        android:paddingVertical="16dp"
        app:layout_constraintTop_toBottomOf="@id/header" >


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="384dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/patient_detail">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            tools:ignore="Suspicious0dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="궁금한 사항이 있으시다면"
                android:textSize="@dimen/text_size_title"
                android:gravity="center"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:onClick="OnQuestionButtonClick"
                android:background="@drawable/patient_question_background">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:src="@drawable/baseline_question_mark_24"
                    android:layout_margin="10dp"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="궁금한 사항이 있으시다면"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_margin="10dp"
                    android:textSize="@dimen/text_size_title"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="자동으로 간호사에게 전달됩니다"
                    android:gravity="center"
                    android:layout_margin="10dp"
                    android:textSize="@dimen/text_size_h1"/>

            </LinearLayout>



        </LinearLayout>


        <View
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:background="#000000"
            android:layout_marginHorizontal="16dp"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            tools:ignore="Suspicious0dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="빠른 해결을 원하신다면"
                android:textSize="@dimen/text_size_title"
                android:gravity="center"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:onClick="OnRequestButtonClick"
                android:background="@drawable/patient_request_background">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="10dp"
                    android:src="@drawable/baseline_mic_none_24"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="요청사항을 말씀해주세요"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_margin="10dp"
                    android:textSize="@dimen/text_size_title"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="자동으로 간호사에게 전달됩니다"
                    android:gravity="center"
                    android:layout_margin="10dp"
                    android:textSize="@dimen/text_size_h1"/>

            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>